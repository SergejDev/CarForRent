                <td>
                    <div>
                        @Html.DisplayNameFor(model => model.Model):
                    </div>
                </td>
                <td>
                    <div>
                        @Html.DisplayTextFor(model => model.Model)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div>
                        @Html.DisplayNameFor(model => model.Number):
                    </div>
                </td>
                <td>
                    <div>
                        @Html.DisplayTextFor(model => model.Number)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div>
                        @Html.DisplayNameFor(model => model.YearOfManufacture):
                    </div>
