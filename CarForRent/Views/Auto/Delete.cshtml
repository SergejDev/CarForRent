            </tr>
            <tr>
                <td>
                    <div>
                        @Html.DisplayNameFor(model => model.PlacesCount):
                    </div>
                </td>
                <td>
                    <div>
                        @Html.DisplayTextFor(model => model.PlacesCount)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div>
                        @Html.DisplayNameFor(model => model.EngineVolume):
                    </div>
                </td>
                <td>
                    <div>
                        @Html.DisplayTextFor(model => model.EngineVolume)
