@model CarForRent.Models.Auto

@{
    ViewBag.Title = "Редактирование автомобиля";
    Html.EnableClientValidation(false);
}

<h2>Редактировать характеристики автомобиля</h2>


@using (Html.BeginForm("Edit", "CmsAuto", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.AutoId)
    <table class="table">
        <tr>
            <td>
                <div class="displayField" style="margin-bottom: 30px;">
                    <img class = "img-rounded" src="@CarForRent.Helpers.UrlBuilder.BuildAutoImageUrl(Model.ImageFileName)"/>
                </div>

                <div class="editor-field" style="margin-bottom: 10px;">
                    <input type="file" name="file" class="btn" />
                </div>
            </td>

            <td>
            </td>
        </tr>

        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Mark)
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Mark)
                    @Html.ValidationMessageFor(model => model.Mark)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Model)
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Model)
                    @Html.ValidationMessageFor(model => model.Model)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.AutoClass)
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.AutoClassId, (SelectList)ViewBag.AutoClassItems)
                    @Html.ValidationMessageFor(model => model.AutoClass)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.EngineType)
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.EngineTypeId, (SelectList)ViewBag.EngineTypeItems)
                    @Html.ValidationMessageFor(model => model.EngineType)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.GearboxType)
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.GearboxTypeId, (SelectList)ViewBag.GearboxTypeItems)
                    @Html.ValidationMessageFor(model => model.GearboxType)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.FuelType)
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.FuelTypeId, (SelectList)ViewBag.FuelTypeItems)
                    @Html.ValidationMessageFor(model => model.FuelType)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Number)
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Number)
                    @Html.ValidationMessageFor(model => model.Number)
                </div>
            </td>
        </tr>

        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.YearOfManufacture)
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.YearOfManufacture)
                    @Html.ValidationMessageFor(model => model.YearOfManufacture)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.PlacesCount)
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.EditorFor(model => model.PlacesCount)
                    @Html.ValidationMessageFor(model => model.PlacesCount)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.EngineVolume)
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.EditorFor(model => model.EngineVolume)
                    @Html.ValidationMessageFor(model => model.EngineVolume)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Price)
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Price)
                    @Html.ValidationMessageFor(model => model.Price)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.AutoCount)
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.EditorFor(model => model.AutoCount)
                    @Html.ValidationMessageFor(model => model.AutoCount)
                </div>
            </td>
        </tr>
    </table>
    
    <div style="margin-top: 30px; margin-bottom: 30px">
        <input type="submit" value="Сохранить изменения" class="btn btn-primary btn-large" />
    </div>

}

<div>
    @Html.ActionLink("Вернуться к списку", "Index", "CmsAuto", null, new { @class = "btn" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
