@using PagedList.Mvc
@model PagedList.IPagedList<CarForRent.Models.Order>

@{
    ViewBag.Title = "Orders management";
}

<h2>Orders management</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].OrderDuration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Auto.Mark)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Client.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].IsOpen)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDuration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Auto.Mark)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Client.UserName)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.IsOpen)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.OrderId })
        </td>
    </tr>
}

</table>
<div style="text-align: center;">

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), 
                                 new PagedListRenderOptions { LinkToFirstPageFormat = "<<", 

                                                              LinkToPreviousPageFormat = "Back",

                                                              LinkToNextPageFormat = "Forward",

                                                              LinkToLastPageFormat = ">>" })

        </div>