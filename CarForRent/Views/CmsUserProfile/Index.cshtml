@model IEnumerable<CarForRent.Models.UserProfile>

@{
    ViewBag.Title = "User management";
}

<h2>User management</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientInformation.UserFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientInformation.UserMidleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientInformation.UserLastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientInformation.PassportNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClientInformation.UserFirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClientInformation.UserMidleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClientInformation.UserLastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClientInformation.PassportNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.UserId }) |
            @Html.ActionLink("Details", "Details", new { id=item.UserId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.UserId })
        </td>
    </tr>
}

</table>
