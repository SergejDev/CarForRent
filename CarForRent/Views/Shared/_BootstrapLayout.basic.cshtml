@using System.Web.Optimization
@using BootstrapSupport
@using NavigationRoutes
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Styles.Url("~/Content/css")" rel="stylesheet"/>
    @Styles.Render("~/Content/AutoStyle.css") 
    <script src="@Scripts.Url("~/Scripts/jquery-1.9.1.min.js")" type="text/javascript"></script>

    @RenderSection("head", required: false)
    @Html.Partial("_html5shiv")
    @* favicons and touch icons go here *@
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="~/Auto/Index" title="Car For Rent">Car For Rent</a>
                <div class="nav-collapse collapse">
                    <div class="pull-right">
                        <ul class="nav">
                            @Html.Navigation()
                            @Html.Partial("_LoginPartial")
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @RenderSection("featured", required: false)
    <div class="container">
        @Html.Partial("_alerts")
        @Html.Partial("_validationSummary")
        @RenderBody()
        <hr>
        <footer>
            <p>&copy; Company @System.DateTime.Now.ToString("yyyy")</p>
        </footer>
    </div>
    
    @Scripts.Render("~/js")
    @RenderSection("Scripts", required: false)
    @*<script src="@Scripts.Url("~/Scripts/ValidationFixes.js")" type="text/javascript"></script>*@
</body>
</html>

